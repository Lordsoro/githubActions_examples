name: main_workflow
  on:
    push:
      branches: main
jobs:
  linter-execution:
    runs-on:
      ubuntu-latest
      
    steps: 
      - name: Checkout code
        uses: actions/checkout@v2
      - name: Execution linter:
        uses: github/super-linter@v3
        with:
          DEFAULT_BRANCH: main
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          LINTER_RULES_PATH: /
          JAVASCRIPT_ES_CONFIG_FILE: .eslintrc.json
          VALIDATE_JAVASCRIPT_ES: true
