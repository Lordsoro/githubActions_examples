name: jest_workflow

on:
  push:
    branches:
      - nodeversions

jobs:
  setup-node:
    runs-on: ubuntu-latest
    steps:
      - name: Setup Node.js 10.x
        uses: actions/setup-node@v2
        with:
          node-version: '10.x'
          
      - name: Setup Node.js 12.x
        uses: actions/setup-node@v2
        with:
          node-version: '12.x'
          
  linter-execution:
    runs-on: ubuntu-latest
    needs: setup-node
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Execution of Linter
        uses: github/super-linter@v4
        with:
          DEFAULT_BRANCH: nodeversions
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          LINTER_RULES_PATH: /
          JAVASCRIPT_ES_CONFIG_FILE: .eslintrc.json
          VALIDATE_JAVASCRIPT_ES: true

  test-execution:
    runs-on: ubuntu-latest
    needs: linter-execution
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Run Jest tests
        run: |
          npm install jest
          npm test

